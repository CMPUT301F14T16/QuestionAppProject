<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <EditText
        android:id="@+id/submit_question_title" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title_hint"
        android:layout_alignParentLeft="true"/>
    <EditText 
        android:id="@+id/submit_question_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="6"
        android:gravity="top"
        android:layout_below="@id/submit_question_title"
        android:layout_alignParentLeft="true"
        android:inputType="textMultiLine|textLongMessage"
        android:textAlignment="textStart"                
        android:hint="@string/hint_submit_question"/>
    <LinearLayout 
        android:id="@+id/submit_question_picture_holder"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:background="#e6e6e6">
        <ImageView 
            android:id="@+id/submit_question_picture_add"
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:src="@drawable/ic_action_new_picture"
            android:layout_gravity="center"
            android:contentDescription="Add picture"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/submit_question_imageView_pic"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_above="@+id/submit_question_picture_holder"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submit_question_imageView_pic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Set geolocation from GPS" />

    <EditText
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gps"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/submit_question_picture_holder"
        android:ems="10"
        android:hint="Enter the address" >

        <requestFocus />
    </EditText>

</RelativeLayout>