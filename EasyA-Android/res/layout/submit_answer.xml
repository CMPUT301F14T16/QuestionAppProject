<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <EditText 
        android:id="@+id/submit_answer_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="6"
        android:gravity="top"
        android:layout_alignParentLeft="true"
        android:inputType="textMultiLine|textLongMessage|textCapSentences"
        android:textAlignment="textStart"                
        android:hint="@string/hint_submit_answer"
        android:imeOptions="actionDone">
        <requestFocus />
    </EditText>   
    <RelativeLayout 
        android:id="@+id/submit_answer_options_holder"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/submit_answer_body"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:background="#e6e6e6">
        <ImageView 
            android:id="@+id/submit_answer_picture_add"
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_action_new_picture"
            android:layout_gravity="center"
            android:contentDescription="Add picture"
            android:onClick="onAttachPictureClick"
            android:layout_marginLeft="5dp"/>
        <ImageView 
            android:id="@+id/submit_answer_location"
            android:layout_height="32dp"
            android:layout_width="32dp"            
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/submit_answer_picture_add"
            android:src="@drawable/ic_action_place"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:onClick="onLocationClick"
            android:contentDescription="Use location"/>
        <TextView 
            android:id="@+id/submit_answer_location_display"
            android:layout_height="32dp"
            android:layout_width="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/submit_answer_location"
            android:gravity="center_vertical|right"
            android:textStyle="italic"
            android:fadingEdge="horizontal"
            android:clickable="true"
            android:onClick="onLocationSettingsClick"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/submit_answer_imageView_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"        
        android:layout_below="@+id/submit_answer_options_holder"
        android:layout_centerHorizontal="true" />    	
</RelativeLayout>