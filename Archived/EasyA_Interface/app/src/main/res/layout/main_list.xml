<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/questionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="0dp"
        android:layout_toLeftOf="@id/StatsBox"
        android:layout_alignParentLeft="true"
        android:paddingTop="2dp"
        android:fadingEdge="horizontal"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/questionAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionTitle"
        android:layout_toLeftOf="@id/StatsBox"
        android:layout_alignParentLeft="true"
        android:textSize="12sp"
        android:fadingEdge="horizontal"
        android:singleLine="true"/>
    <RelativeLayout
        android:id="@+id/StatsBox"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:background="@drawable/main_list_background"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        <ImageView
            android:id="@+id/questionCommentsIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:src="@android:drawable/sym_action_chat"/>
        <TextView
            android:id="@+id/questionComments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/questionCommentsIcon"
            android:layout_marginBottom="4dp"
            android:singleLine="true"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/questionStarsIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/questionCommentsIcon"
            android:src="@android:drawable/btn_star_big_on"/>
        <TextView
            android:id="@+id/questionStars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/questionComments"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/questionStarsIcon"
            android:singleLine="true"
            android:fadingEdge="horizontal"
            android:gravity="center_vertical"/>
    </RelativeLayout>
</RelativeLayout>